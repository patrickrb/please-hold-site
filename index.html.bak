      margin: 0 auto var(--space-lg);
    }

    .final-cta .cta {
      font-size: 1.1rem;
      padding: 1.25rem 2.5rem;
    }

    /* ===== FOOTER ===== */
    footer {
      background: var(--charcoal);
      color: white;
      padding: var(--space-lg) 0;
    }

    footer .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: var(--space-md);
    }

